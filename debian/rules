#!/usr/bin/make -f

bsdiff:
	dh_testdir

	CFLAGS="$(CFLAGS)" gcc -lbz2 -o bsdiff bsdiff.c
	CFLAGS="$(CFLAGS)" gcc -lbz2 -o bspatch bspatch.c

build: bsdiff

install: build

binary-arch: install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_install
	dh_installman
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-arch

%:
	dh $@

.PHONY: build install binary binary-indep binary-arch binary-indep

# End of file
